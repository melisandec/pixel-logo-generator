generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
}

model LeaderboardEntry {
  id          String   @id
  text        String
  seed        Int
  imageUrl    String
  username    String
  displayName String
  pfpUrl      String
  likes       Int      @default(0)
  createdAt   DateTime @default(now())
  castUrl     String?

  @@index([createdAt])
}
